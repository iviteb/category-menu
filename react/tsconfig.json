{
  "extends": "@vtex/tsconfig",
  "compilerOptions": {
    "jsx": "react",
    "noEmitOnError": false,
    "lib": [
      "dom"
    ],
    "module": "esnext",
    "moduleResolution": "node",
    "target": "es2017",
    "sourceMap": true,
    "noImplicitAny": false,
    "typeRoots": [
      "node_modules/@types"
    ],
    "types": [
      "node",
      "jest",
      "graphql"
    ]
  },
  "include": [
    "./typings/*.d.ts",
    "./**/*.tsx",
    "./**/*.ts"
  ],
  "typeAcquisition": {
    "enable": false
  }
}
